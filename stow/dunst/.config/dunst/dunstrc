    # Sort notifications
    sort = yes
    indicate_hidden = yes
    
    # Alignment
    alignment = left
    vertical_alignment = center
    
    # Show age of message if there are duplicates
    show_age_threshold = 60
    
    # Word wrap
    word_wrap = yes
    ignore_newline = no
    
    # Geometry
    width = 300
    height = 200
    origin = top-right
    offset = 30x20
    shrink = no
    transparency = 0
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 8
    
    # Icons
    icon_position = left
    max_icon_size = 32
    icon_path = "/usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/"
    
    # Sticky
    sticky_history = yes
    history_length = 20
    
    # Idle timeout - notifications will disappear after this time (in seconds)
    idle_threshold = 10
    
    # Show indicators of URLs
    show_indicators = yes
    
    # Notification stacking
    stack_duplicates = true
    hide_duplicate_count = false
    
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

